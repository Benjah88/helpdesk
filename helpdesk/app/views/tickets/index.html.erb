<h1>Listing tickets</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Category</th>
    <th>Status</th>
    <th>Roomnr</th>
    <th>Telnr</th>
    <th>Pcnr</th>
    <th>Os</th>
    <th>Author</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tickets.each do |ticket| %>
  <tr>
    <td><%= ticket.title %></td>
    <td><%= ticket.description %></td>
    <td><%= ticket.category %></td>
    <td><%= @status.name   %></td>
    <td><%= ticket.roomnr %></td>
    <td><%= ticket.telnr %></td>
    <td><%= ticket.pcnr %></td>
    <td><%= ticket.os %></td>
    <td><%= ticket.author %></td>
    <td><%= link_to 'Show', ticket %></td>
    <td><%= link_to 'Edit', edit_ticket_path(ticket) %></td>
    <td><%= link_to 'Destroy', ticket, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

